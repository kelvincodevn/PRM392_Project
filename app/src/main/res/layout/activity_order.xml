<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Tab Headers -->
    <LinearLayout
        android:id="@+id/tabHeaderContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.example.pcbuilder.GradientTextView
            android:id="@+id/tabOnDeliveryGradient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="On Delivery"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:layout_marginEnd="32dp"
            android:visibility="visible" />
        <TextView
            android:id="@+id/tabOnDeliveryPlain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="On Delivery"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:layout_marginEnd="32dp"
            android:visibility="gone" />

        <com.example.pcbuilder.GradientTextView
            android:id="@+id/tabHistoryGradient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/tabHistoryPlain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:visibility="visible" />
    </LinearLayout>

    <!-- On Delivery Content Container -->
    <ScrollView
        android:id="@+id/layoutOnDelivery"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/tabHeaderContainer"
        app:layout_constraintBottom_toTopOf="@id/bottomNavContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Delivery Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/custom_button"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/custom_button"
                        android:src="@android:color/transparent"
                        android:layout_marginEnd="12dp" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <com.example.pcbuilder.GradientTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delivery information"
                            android:textStyle="bold"
                            android:textSize="15sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name: Do Truong Thinh\nPhone number:0704665170\nAddress: Vinhomes\nOrder details: x1 RTX 5090\nNote:No note"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/btnCollapseDelivery"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_minus_gradient" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total Price\n42.000.000 VND"
                        android:textStyle="bold"
                        android:textSize="13sp" />
                    <com.example.pcbuilder.GradientTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status\nPaid"
                        android:textStyle="bold"
                        android:textSize="13sp" />
                </LinearLayout>

                <com.example.pcbuilder.GradientTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order update"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">
