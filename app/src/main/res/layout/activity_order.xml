                            android:textSize="12sp"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/btnCollapseHistory"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_minus_gradient" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">
                    <com.example.pcbuilder.GradientTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total Price\n42.000.000 VND"
                        android:textStyle="bold"
                        android:textSize="13sp" />
                    <com.example.pcbuilder.GradientTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status\nPaid"
                        android:textStyle="bold"
                        android:textSize="13sp" />
                </LinearLayout>

                <com.example.pcbuilder.GradientTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Status"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />
                <com.example.pcbuilder.GradientTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivered"
                    android:textStyle="bold"
                    android:textColor="#FF6094EA"
                    android:layout_marginTop="2dp" />

                <Button
                    android:id="@+id/btnContactHistory"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Contact"
                    android:background="@drawable/custom_button"
                    android:textColor="#FF6094EA"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    app:backgroundTint="@null" />
            </LinearLayout>

            <!-- List of Orders (GradientTextView for names) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- Example order item -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/custom_button"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">
                    <com.example.pcbuilder.GradientTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Skibidi"
                        android:textStyle="bold"
                        android:textSize="15sp" />
                    <com.example.pcbuilder.GradientTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CPU Intel Ultra 285k"
                        android:textSize="13sp"
                        android:layout_marginEnd="8dp" />
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_plus_gradient" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/custom_button"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">
                    <com.example.pcbuilder.GradientTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tung Sahur"
                        android:textStyle="bold"
                        android:textSize="15sp" />
                    <com.example.pcbuilder.GradientTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Custom pre-built PC"
                        android:textSize="13sp"
                        android:layout_marginEnd="8dp" />
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_plus_gradient" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/custom_button"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">
                    <com.example.pcbuilder.GradientTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Crocodilo"
                        android:textStyle="bold"
                        android:textSize="15sp" />
                    <com.example.pcbuilder.GradientTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
