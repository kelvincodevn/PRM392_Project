                        android:id="@+id/btnCancel"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="Cancel"
                        android:background="@drawable/custom_gradient"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp"
                        app:backgroundTint="@null"/>
                    <Button
                        android:id="@+id/btnDelivered"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="Delivered"
                        android:background="@drawable/custom_gradient"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        app:backgroundTint="@null"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btnContact"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Contact"
                    android:background="@drawable/custom_button"
                    android:textColor="#FF6094EA"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    app:backgroundTint="@null"/>
            </LinearLayout>

            <!-- List of Orders -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- Example order item -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/custom_button"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">
                    <com.example.pcbuilder.GradientTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Skibidi"
                        android:textStyle="bold"
                        android:textSize="15sp" />
                    <com.example.pcbuilder.GradientTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CPU Intel Ultra 285k"
                        android:textSize="13sp"
                        android:layout_marginEnd="8dp" />
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_plus_gradient" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/custom_button"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">
                    <com.example.pcbuilder.GradientTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tung Sahur"
                        android:textStyle="bold"
                        android:textSize="15sp" />
                    <com.example.pcbuilder.GradientTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Custom pre-built PC"
                        android:textSize="13sp"
                        android:layout_marginEnd="8dp" />
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_plus_gradient" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/custom_button"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">
                    <com.example.pcbuilder.GradientTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Crocodilo"
                        android:textStyle="bold"
                        android:textSize="15sp" />
                    <com.example.pcbuilder.GradientTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name #1"
                        android:textSize="13sp"
                        android:layout_marginEnd="8dp" />
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_plus_gradient" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/custom_button"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">
                    <com.example.pcbuilder.GradientTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Batapim"
                        android:textStyle="bold"
                        android:textSize="15sp" />
                    <com.example.pcbuilder.GradientTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name #2"
                        android:textSize="13sp"
                        android:layout_marginEnd="8dp" />
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_plus_gradient" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/custom_button"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">
                    <com.example.pcbuilder.GradientTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Kasane Teto"
                        android:textStyle="bold"
                        android:textSize="15sp" />
                    <com.example.pcbuilder.GradientTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name #3"
                        android:textSize="13sp"
                        android:layout_marginEnd="8dp" />
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_plus_gradient" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- History Content Container (uses GradientTextView for main text) -->
