<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- Title Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Build it"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="32sp"
                    android:layout_gravity="bottom" />

                <com.example.pcbuilder.GradientTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YOUR"
                    android:textStyle="bold"
                    android:textSize="32sp"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="bottom" />
            </LinearLayout>

            <com.example.pcbuilder.GradientTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WAY"
                android:textStyle="bold"
                android:textSize="64sp"
                android:layout_marginTop="-8dp"
                android:layout_gravity="start" />

            <!-- Card 1: Galleries -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_card_gradient_border">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="0dp"
                    android:layout_margin="3dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/gallery_img" />
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#40FFFFFF" />

                <com.example.pcbuilder.GradientTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trưng bày"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="20dp" />
            </FrameLayout>

            <!-- Card 2: Our recommendation -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_card_gradient_border">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="0dp"
                    android:layout_margin="3dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/recommendation_img" />
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#40FFFFFF" />

                <com.example.pcbuilder.GradientTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="giới thiệu về chúng tôi"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="20dp" />
            </FrameLayout>

            <!-- Card 3: Pick your own parts -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_card_gradient_border">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="0dp"
                    android:layout_margin="3dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/pick_parts_img" />
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#40FFFFFF" />

                <com.example.pcbuilder.GradientTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chọn cấu hình của bạn"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="20dp" />
            </FrameLayout>

            <!-- Card 4: Tutorial videos -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_card_gradient_border">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="0dp"
                    android:layout_margin="3dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/tutorial_img" />
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#40FFFFFF" />

                <com.example.pcbuilder.GradientTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Video hướng dẫn"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="20dp" />
            </FrameLayout>

            <!-- Card 5: Guidebook -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_card_gradient_border">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="0dp"
                    android:layout_margin="3dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/guidebook_img" />
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#40FFFFFF" />

                <com.example.pcbuilder.GradientTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sách hướng dẫn"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="20dp" />
            </FrameLayout>

            <!-- Back to Top -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="24dp">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_arrow_up_gradient" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Về lại bên trên"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Custom Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavContainer"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_bottom_nav_rounded"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Builder (active) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/ivBuilder"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/icon_builder_color" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Builder"
                android:textColor="#E040FB"
                android:textSize="12sp" />
        </LinearLayout>
        <!-- Shop -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/ivShop"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/icon_shop" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>
        <!-- Home -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/ivHome"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/icon_home" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>
        <!-- Catalog -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/ivCatalog"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/icon_catalog" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Catalog"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>
        <!-- Settings -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/ivSetting"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/icon_settings" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout> 