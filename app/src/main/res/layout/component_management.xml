<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Title -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical" android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="COMPONENT MANANAGEMENT"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center_horizontal"/>
        </LinearLayout>
        <!-- Image Placeholder with Gradient Border -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"> <FrameLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/custom_button"
            android:layout_marginEnd="24dp"  android:layout_marginRight="24dp"  android:gravity="center">

            <com.example.pcbuilder.GradientTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Add Component"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </FrameLayout>

            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/custom_button"
                android:gravity="center">

                <com.example.pcbuilder.GradientTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Update Component"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="16sp"/>
            </FrameLayout>

        </LinearLayout>
        <FrameLayout
            android:layout_width="320dp"
            android:layout_height="300dp"
            android:background="@drawable/custom_button"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:gravity="center">
                <com.example.pcbuilder.GradientTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="List Component"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="35sp"/>
            </LinearLayout>
        </FrameLayout>
        <!-- Component's Model Search Bar -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waiting For Approval"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical"       android:gravity="center_horizontal"  android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginBottom="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp" android:paddingLeft="38dp"
                android:paddingRight="10dp"
                android:background="@drawable/custom_button"
                android:textColor="#000"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="38dp"
                android:paddingRight="10dp"
                android:background="@drawable/custom_button"
                android:textColor="#000"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="38dp"
                android:paddingRight="10dp"
                android:background="@drawable/custom_button"
                android:textColor="#000"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="38dp"
                android:paddingRight="10dp"
                android:background="@drawable/custom_button"
                android:textColor="#000"/>
        </LinearLayout>

        <!-- Set your price -->

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>
    </LinearLayout>
</ScrollView>